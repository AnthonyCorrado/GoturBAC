<h1 class= "text-center">Change Who You Are Through The Power of the Internets</h1>


<% current_user.current_bac %>

<%= form_for current_user do |f| %>

<!-- User creation and editing -->
  <div class= "input_fields">
      <h3>Name</h3>

        <%= f.text_field :name %>


      <h3>Password</h3>

        <%= f.password_field :password %>

      <h3>Gender</h3>

        <%= f.select :gender, [['Guy'], ['Lady'], ['I don\'t subscribe to gender roles']] %>

      <h3>Weight</h3>

        <%= f.number_field :weight %>

      <h3>Avatar</h3>

        <%= f.file_field :avatar %>

  </div>



  <div class="input_buttons">
      <%= f.submit "Submit", class: "large button expand radius round [secondary success alert]" %>
  </div>


<!-- Button that sets the users persistent preferred BAC to whatever their current BAC happens to be. Current BAC is sent in via a global variable -->
  <h3>Set Current BAC to your Preferred BAC<h3>
      <div class="input_buttons">
          <%= form_for current_user do |t| %>
          <%= t.hidden_field :preferred_bac, value: $current_bac %>
          <%= t.submit "Happy Place", class: "large button expand radius round [secondary success alert]" %>
          <% end %>
      </div>

      <% end %>

