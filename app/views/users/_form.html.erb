<%= form_for @user do |f| %>

Name: <%= f.text_field :name %>

Password: <%= f.password_field :password %>

Avatar: <%= f.file_field :avatar %>

Gender: <%= f.select :gender, [['M'], ['F']] %>

Weight: <%= f.number_field :weight %>

Beers: <%= collection_select :user_drinks, :drink_ids, Drink.all, :id, :name %>

<%= f.submit "Submit", class: "small button" %>

<% end %>