<h1>Choose Your Weapon</h1>

    <%= form_for @user_drink do |f| %>

<!-- user drinks created from pre-seeded drink data -->
  <div class="input_fields">
      Beers: <%= f.collection_select :drink_id, Drink.all, :id, :drink_name %>
  </div>

  <div class="input_buttons">
      <%= f.submit "I'm Drankin'!", class: "large button expand radius round [secondary success alert]" %>
  </div>

  <% end %>